<h1>商品詳細</h1>
<li>
    <td>画像</td>
    <% if @item.image.attached? %>
        <td><%= image_tag @item.image, size: "100x100" %></td>
    <% else %>
        <td><%= image_tag 'no_image', size: "100x100" %></td>
    <% end %>
    
</li>
  
<li>
    <td>商品名</td>
    <td><%=@item.name%></td>
</li>
<li>
    <td>商品説明</td>
    <td><%=@item.introduction%></td>
</li>
<li>
    <td>ジャンル</td>
    <td><%=@item.genre.name%></td>
</li>
<li>
    <td>税込価格</td>
    <td><%=@item.price%></td>
</li>
<li>
    <td>販売ステータス</td>
    <%if @item.is_active == true%>
            <td>販売中</td>
        <%else%>
            <td>販売停止</td>
        <%end%>
</li>
