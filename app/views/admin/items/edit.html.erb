<main>
  <div class="container">
    <div class="row">
        <div class="col-md-8">
          <h1>編集画面</h1>
          <%= form_with model: @item, url: admin_update_item_path do |f| %>
          <ul>
              <label>画像</label>
              <label><%= f.file_field :image, accept: "image/*" %></label>
          </ul>
          <ul>
              <label>名前</label>
              <label><%= f.text_field :name%></label>
          </ul>
          <ul>
              <label>紹介</label>
              <label><%= f.text_field :introduction %></label>
          </ul>
          <ul>
              <label>説明</label>
              <label><%= f.text_area :caption %></label>
          </ul>
          <ul>
              <label>ジャンル</label>
              <label><%= f.collection_select :genre_id,@genre_name, :id, :name %></label>
          </ul>
          <ul>
              <label>価格</label>
              <label><%= f.text_field :price %></label>
          </ul>  
          <ul>
            
              <div class="done">
                <%= f.label :販売ステータス %>
                <label>
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :is_active, '販売中', value: true %>
                </label>
                <label>
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, '販売停止中', value: false %>
                </label>
              </div>
              <%= f.submit '新規投稿', class: 'btn-success' %>
          </ul>
          
          <% end %>
    </div>
  </div>
</main>