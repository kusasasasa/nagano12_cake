<h1>会員詳細</h1>
    <p>会員ID</p>
    <%=@customer.id%>
    <p>氏名</p>
    <%=@customer.first_name + @customer.last_name%>
    <p>フリガナ</p>
    <%=@customer.first_name_kana + @customer.last_name_kana%>
    <p>郵便番号</p>
    <%=@customer.postal_code%>
    <p>住所</p>
    <%=@customer.address%>
    <p>電話番号</p>
    <%=@customer.telephone_number%>
    <p>メールアドレス</p>
    <%=@customer.email%>
    <p>会員ステータス</p>
    <%if @customer.is_deleted==false%>
        <td><%="有効"%></td>
    <%else%>
        <td><%="退会"%></td>
    <%end%>
    
    <%= button_to "編集する",  edit_admin_customer_path(@customer.id) , method: :get %>
    <%= button_to "ボタン名",  admin_customers_path%>