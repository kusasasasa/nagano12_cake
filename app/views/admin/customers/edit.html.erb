<h1><%=@customer.first_name+@customer.last_name%>さんの会員情報編集</h1>
<%= form_with model: @customer, url:  admin_update_customer_path(@customer.id) do |f| %>
<ul>
    <li>会員ID</li>
    <li><%=@customer.id%></li>
</ul>
<ul>
    <li>氏名</li>
    <li>
        <%= f.text_field :first_name%>
        <%= f.text_field :last_name%>
    </li>
</ul>
<ul>
    <li>フリガナ</li>
    <li>
        <%= f.text_field :first_name_kana%>
        <%= f.text_field :last_name_kana%>
    </li>
</ul>
<ul>
    <li>郵便番号</li>
    <li><%= f.text_field :postal_code%></li>
</ul>
<ul>
    <li>住所</li>
    <li><%= f.text_field :address%></li>
</ul>
<ul>
    <li>メールアドレス</li>
    <li><%= f.text_field :email%></li>
</ul>
    

    
<div>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_active, '退会', value: true %>
      </div>
      <div>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_active, '有効', value: false %>
      </div>
    <%= f.submit '編集を保存' %>
<%end%>