<h1>マイページ</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <tr><th>登録情報 </th><td><%= link_to '編集する', customers_edit_path, class: 'btn-success' %></td></tr>
                <table class="table table-striped">
                    <tr><th>氏名</th><td><%=@customer.first_name+@customer.last_name%></td></tr>
                    <tr><th>カナ</th><td><%=@customer.first_name_kana+@customer.last_name_kana%></td></tr>
                    <tr><th>郵便番号</th><td><%=@customer.postal_code%></td></tr>
                    <tr><th>住所</th><td><%=@customer.address%></td></tr>
                    <tr><th>電話番号</th><td><%=@customer.telephone_number%></td></tr>
                    <tr><th>email</th><td><%=@customer.email%></td></tr>
                </table>
        </div>
        <table>
            <tr><th>配送先</th><td><%= link_to '一覧を見る', public_addresses_path,class: 'btn-primary' %></td></tr>
            <tr><th>注文履歴 </th><td><%= link_to '一覧を見る', public_orders_path,class: 'btn-primary' %></td></tr>
        </table>
            
    </div>
</div>
            
            
