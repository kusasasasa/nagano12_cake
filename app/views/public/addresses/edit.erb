<h1>配送先編集</h1>
<div class="container">
      <div class="row">
        <div class="col-md-10">
            <%= form_with model: @address,  url:  public_update_addresses_path, method: :patch do |f| %>
                <div class="field">
                    <label class="col-sm-4 col-form-label">郵便番号(ハイフンなし)</label>
                      <%= f.text_field :postal_code %>
                </div>
                <div class="field">
                    <label class="col-sm-4 col-form-label">住所</label>
                        <%= f.text_field :address, :size=>"60" %>
                </div>
                <div class="field">
                    <label class="col-sm-4 col-form-label">宛名</label>
                        <%= f.text_field :name %>
                        
                </div>
        </div>
        <div class="col-md-12">
            <%= f.submit '変更を保存',class: 'btn-success' %>
        </div>
      </div>
</div>
                
  
 <%end%>