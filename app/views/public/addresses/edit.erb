<h1>配送先編集</h1>
<%= form_with model: @address,  url:  public_update_addresses_path, method: :patch do |f| %>
    <div class="field">
        <label class="col-sm-4 col-form-label">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
    </div>
    <div class="field">
        <label class="col-sm-4 col-form-label">住所</label>
            <%= f.text_field :address %>
    </div>
    <div class="field">
        <label class="col-sm-4 col-form-label">宛名</label>
            <%= f.text_field :name %>
            
    </div>
    <%= f.submit '投稿' %>
  
 <%end%>