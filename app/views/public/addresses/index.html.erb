<h1>配送先登録/一覧</h1>
<main>
    <div class="container">
      <div class="row">
        <div class="col-md-10">
        <%= form_with model: @address,  url:  public_create_addresses_path, method: :post do |f| %>
            <div class="field">
                <label class="col-sm-4">郵便番号(ハイフンなし)</label>
                  <%= f.text_field :postal_code %>
            </div>
            <div class="field">
                <label class="col-sm-4 col-form-label">住所</label>
                    <%= f.text_field :address %>
            </div>
            <div class="field">
                <label class="col-sm-4 col-form-label">宛名</label>
                    <%= f.text_field :name %>
                <%= f.submit '新規登録' ,class: 'btn-success'%>
            </div>
            
          
         <%end%>
        <div class="container">
          <div class="row">
            <div class="col-md-10">
                <table class="table table-striped">
                     
                            
                    <tr>
                        <td>郵便番号</td>
                        <td>住所</td>
                        <td>宛名</td>
                        <td></td>
                        <td></td>
                        
                        
                    </tr>
                
                <% @addresses.each do |address| %>
                        <% if current_customer.id==address.customer_id %>
                        <tr>
                            <td><%=address.name%></td>
                            <td><%=address.address%></td>
                            <td><%=address.postal_code%></td>
                            <td><%= link_to '編集', edit_public_address_path(address.id) , class: 'btn-success' %></td>
                            <td><%= link_to "削除", public_destroy_addresses_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" , class: 'btn-danger'%></td>
                        </tr>
                        <%end%>
                <%end%>
                </table>
              
        </div>
      </div>
    </div>
</main>