<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path  do |f| %>
    <h4>名前</h4>
      <%= f.text_field :name%>
    <h4>紹介</h4>
      <%= f.text_field :introduction %>
    <h4>説明</h4>
      <%= f.text_area :caption %>
    
    <h4>ジャンル</h4>
      <%= f.select :genre_id, ['ケーキ', 'プリン', '焼き菓子'], {include_blank: '選択してください'}, class: 'sample' %>
    <h4>価格</h4>
      <%= f.text_field :price %>
      
    <h4>販売ステータス</h4>
      <div class="done">
      <%= f.label :販売ステータス %>
      <div>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中', value: true %>
      </div>
      <div>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: false %>
      </div>
    </div>
    <%= f.submit '投稿' %>

<% end %>