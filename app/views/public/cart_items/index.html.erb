<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>
<table class="table table-striped">
    <tr>
        <td>名前</td>
        <td>個数</td>
        <td>単価（税込）</td>
        <td>小計</td>
        <td></td>
        
    </tr>

<% @cart_items.each do |cart_item| %>

        <tr>
        
            <td><%=cart_item.item.name%></td>
            <td><%=cart_item.amount%>
                <%= form_with model: @cart_item, url: public_cart_items_path, method: :patch do |f| %>
                    <%= f.select :amount, [['いち',1], ['に',2], ['さん',3]] %>
                    
                   
                <% end %>
            </td>
            
            <td><%= cart_item.item.with_tax_price%></td>
            <td><%= cart_item.subtotal%></td>
            <% @item_total+=cart_item.subtotal %>
        </tr>
     
        
<%end%>


</table>
<table>
    <tr>
        <td><%= @item_total%></td>
    </tr>
</table>