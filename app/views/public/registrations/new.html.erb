<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
    
    <div class="form-group">
      <label class="col-sm-3 col-form-label">名前</label>
      <%=f.label :（姓） %>
      <%= f.text_field :first_name %>
    
      <%= f.label :（名） %>
      <%= f.text_field :last_name %>
    </div>
 
    <div class="form-group">
      <label class="col-sm-3 col-form-label">フリガナ</label>
      <%= f.label :（セイ） %>
      <%= f.text_field :first_name_kana %>
      <%= f.label :（メイ） %>
      <%= f.text_field :last_name_kana %>
    </div>
 
    <div class="field">
       <label class="col-sm-4 col-form-label">email</label>
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
          <label class="col-sm-4 col-form-label">郵便番号（ハイフンなし）</label>
          <%= f.text_field :postal_code %>
    </div>
    <div class="field">
        <label class="col-sm-4 col-form-label">住所</label>
        <%= f.text_field :address %>
    </div>
    <div class="field">
        <label class="col-sm-4 col-form-label">電話番号（ハイフンなし）</label>
        <%= f.text_field :telephone_number %>
    </div>
    <div class="field">
      <label class="col-sm-4 col-form-label">password(6文字以上)</label>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <label class="col-sm-4 col-form-label">password_confirmation</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
